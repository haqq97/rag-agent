# RAG Chatbot Server Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Configuration
MODEL_PROVIDER=openai  # Options: "openai" or "ollama"
OPENAI_API_KEY=your-openai-api-key-here
GEN_MODEL=gpt-4o-mini  # OpenAI model or Ollama model name

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Vector Store Configuration
CHROMA_DIR=./chroma_db
COLLECTION=docs
EMBED_MODEL=BAAI/bge-small-en-v1.5
RERANK_MODEL=BAAI/bge-reranker-base

# API Configuration
ALLOWED_ORIGINS=https://your-framer-site.framer.website,https://yourdomain.com

# Chunking Configuration
CHUNK_SIZE=600
CHUNK_OVERLAP=80
TOKENIZER_MODEL=gpt-4o-mini

# Logging Configuration
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
